                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LineOrderId" class="control-label"></label>
                <select asp-for="LineOrderId" class="form-control" asp-items="ViewBag.LineOrderId"></select>
                <span asp-validation-for="LineOrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstrumentId" class="control-label"></label>
