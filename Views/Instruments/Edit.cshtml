            </div>
            <div class="form-group">
                <label asp-for="shInsId" class="control-label"></label>
                <input asp-for="shInsId" class="form-control" />
                <span asp-validation-for="shInsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
