@model ClaveSol.Models.Instrument

@{
    ViewData["Title"] = "Detalles";
}
<head>
    <link href="@Url.Content("~/css/instrDetails.css")" rel="stylesheet" type="text/css" />
</head>

@* <h1>Detalles</h1> *@


@{
    string categName = @ViewBag.catName;
}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"> @*Categoria => details*@
        @Html.ActionLink(@categName, "Details", "Categories", new { id = @Model.SubCategory.CategoryId }, null)
    <li class="breadcrumb-item"> @*SubCategoria => details*@
        @Html.ActionLink(Model.SubCategory.Name, "Details", "SubCategories", new { id = @Model.SubCategoryId }, null)
    </li> 
    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li> @*Instrumento*@
  </ol>
</nav>


<div class="container">
    <h1 class="text-center">@Html.DisplayFor(model => model.Name)</h1>
    
    <div id="brandPrice">
        <h2>@Html.DisplayFor(model => model.Brand)</h2>
        <money>@Html.DisplayFor(model => model.Price)<currency>â‚¬</currency></money>
    </div>
    <p class="text-center">@Html.DisplayFor(model => model.Description)</p>


        @* ##### MULTIMEDIA ##### *@

  <div class="col mb-4">
    <div class="card multimedia">
      <img src="~/assets/defaultIns.jpg" class="card-img-top" alt="..." style="width: 14em;">
      @* LISTA MEDIA *@
      <ul class="list-group list-group-horizontal-md">
        <li class="list-group-item">
             <img src="~/assets/defaultIns.jpg" class="card-img-top" alt="..." style="width: 5em;">
        </li>
        <li class="list-group-item">
             <img src="~/assets/defaultIns.jpg" class="card-img-top" alt="..." style="width: 5em;">
        </li>
        <li class="list-group-item">
             <img src="~/assets/defaultIns.jpg" class="card-img-top" alt="..." style="width: 5em;">
        </li>
      </ul>

      @* <div class="card-body">
        <h5 class="card-title">MULTIMEDIA</h5>
      </div> *@
    </div>
  </div>

  <div class="col mb-4">
    <div class="card">
      <img src="~/assets/defaultIns.jpg" class="card-img-top" alt="..." style="width: 3em;">
      <div class="card-body">
        <h5 class="card-title">ATRIBUTOS</h5>
        <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content.</p>
      </div>
    </div>
</div>

  <div class="col mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">DISPONIBILIDAD</h5>
        <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      </div>
    </div>
  </div>
</div>
</div>

<div>
    <h4>Instrumento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
